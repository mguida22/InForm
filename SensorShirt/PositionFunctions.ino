boolean armAtSideRight() {
  if(backValue > 0 && backValue < 0) {
    if(shoulderValue > 0 && shoulderValue < 0) {
      if(underarmValue > 0 && underarmValue < 0) {
        return true;
      }
    }
  }
  return false;
}

